@{
    ViewData["Title"] = "Home Page";
}


 <!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome</title>
    <link rel="stylesheet" href="~/css/styles.css">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f9f9f9;
            color: #333;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            flex-direction: column;
        }

        .welcome-container {
            text-align: center;
            padding: 20px;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            max-width: 800px;
            width: 100%;
        }

        .welcome-container h1 {
            font-size: 2.5em;
            color: #007bff;
            margin-bottom: 20px;
        }

        .welcome-container p {
            font-size: 1.2em;
            color: #555;
            margin-bottom: 30px;
        }

        .welcome-container a {
            text-decoration: none;
            color: #007bff;
            font-weight: bold;
            font-size: 1.1em;
        }

        .welcome-container a:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>

    <div class="welcome-container">
        <h1>Welcome to VCardApp!</h1>
        <p>Click the button for creating VCards!</p>
        <a href="@Url.Action("Create", "VCard")">Get Started</a>
    </div>

</body>

</html>
